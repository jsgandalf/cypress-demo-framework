pipeline {
  agent any
  parameters {
    string(name: 'SPEC', defaultValue: "cypress/integration/**/**", description: "Enter the script path that you want to execute")
    choice(name: 'BROWSER', choices: ['chrome', 'edge', 'firefox'], description: "Choose the browser where you want to execute your scripts")
  }
  
  stages {
    stage('Building') {
      steps {
        echo 'Building the App'
      }
    }
    stage('Testing') {
      steps {
        sh "npm i"
        sh "npx cypress run --browser=${BROWSER} --spec ${SPEC}"
      }
    }
    stage('Deploying') {
      steps {
        eho "Deploy the app"
      }
    }
  }
  
  post {
    always {
      publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'cyptress/report', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: ''])
    }
  }
}
